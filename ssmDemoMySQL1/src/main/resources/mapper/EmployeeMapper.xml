<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="org.cloud.ssm.mapper.EmployeeMapper">

  <resultMap type="Employee" id="employeeMap">
    <id column="id" property="id"></id>
    <result column="name" property="name" />
    <result column="address" property="address" />
    <result column="age" property="age" />
    <result column="department" property="department" />
    <result column="salary" property="salary" />
    <result column="tel" property="tel" />
  </resultMap>

  <select id="listEmployee" resultMap="employeeMap">
    SELECT *
    FROM `t_employee`
  </select>

  <delete id="deleteEmployee" parameterType="long">
    DELETE FROM
    `t_employee` WHERE `t_employee`.id=#{id}
  </delete>

  <insert id="addEmployee" parameterType="Employee">
    INSERT INTO `t_employee` (id,name,address,age,department,salary,tel)
    VALUES (NULL,#{name},#{address},#{age},#{department},#{salary},#{tel})
  </insert>
  
  <select id="getEmployee" resultMap="employeeMap">
    SELECT *
    FROM `t_employee`
    WHERE id=#{id}
  </select>
  
  <select id="getCount" resultType="long">
    SELECT count(*)
    FROM `t_employee`
  </select>

  <update id="updateEmployee" parameterType="Employee">
    UPDATE
      `t_employee`
    <set>
      <if test="name != null">
        name = #{name},
      </if>
      <if test="address != null">
        address = #{address},
      </if>
        age = #{age}
    </set>
    WHERE id=#{id}
  </update>

</mapper>